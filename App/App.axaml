<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:App"
             xmlns:resourcez="clr-namespace:App.ResourceManagement"
             x:Class="App.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <resourcez:SwitchingResource SelectedResourceId="Dark" Identifier="CSL">
                    <resourcez:ResourceData Identifier="Dark" ResourceUri="/ColorSchemes/DarkScheme.axaml"/>
                    <resourcez:ResourceData Identifier="Light" ResourceUri="/ColorSchemes/LightScheme.axaml"/>
                </resourcez:SwitchingResource>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme Mode="Dark"/>
    </Application.Styles>
</Application>
