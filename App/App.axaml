<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:App"
             xmlns:resourcemangement="clr-namespace:App.ResourceManagement"
             x:Class="App.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <resourcemangement:ResourceController Identifier="ColorSchemes" DefaultId="Dark">
                    <resourcemangement:Resource Identifier="Dark" ResourceUri="avares://App/ColorSchemes/DarkScheme.axaml"/>
                    <resourcemangement:Resource Identifier="Light" ResourceUri="avares://App/ColorSchemes/LightScheme.axaml" />
                </resourcemangement:ResourceController>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    <Application.Styles>
        <FluentTheme Mode="Dark"/>
        <resourcemangement:StyleController>
            <resourcemangement:Resource Identifier="Default" StyleUri="avares://App/Styles/Default.axaml"/>
        </resourcemangement:StyleController>
    </Application.Styles>
</Application>
