<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:App"
             xmlns:resourcemangement="clr-namespace:App.ResourceManagement"
             x:Class="App.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <local:ResourceManager>
                    <resourcemangement:ResourceGroup Identifier="ColorSchemes" DefaultId="Dark">
                        <resourcemangement:Resource Identifier="Dark" ResourceUri="avares://App/ColorSchemes/DarkScheme.axaml"/>
                        <resourcemangement:Resource Identifier="Light" ResourceUri="avares://App/ColorSchemes/LightScheme.axaml"/>
                    </resourcemangement:ResourceGroup>
                    <resourcemangement:ResourceGroup Identifier="Themes" DefaultId="Default">
                        
                    </resourcemangement:ResourceGroup>
                </local:ResourceManager>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme Mode="Dark"/>
    </Application.Styles>
</Application>
