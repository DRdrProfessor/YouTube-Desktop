<reactiveui:ReactiveWindow
    x:TypeArguments="vms:MainWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveui="http://reactiveui.net"
    xmlns:vms="clr-namespace:App.ViewModels"
    xmlns:controls="clr-namespace:App.Controls"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="App.Views.MainWindow">
    
    <controls:NewTabControl x:Name="MainTabControl" TabStripPlacement="Top">
        <TabItem Header="Test 2" Classes="MainTabItems">
            <ExperimentalAcrylicBorder>
                <ExperimentalAcrylicBorder.Material>
                    <ExperimentalAcrylicMaterial TintColor="Black" TintOpacity="1" MaterialOpacity="0.6" BackgroundSource="Digger" FallbackColor="Black"/>
                </ExperimentalAcrylicBorder.Material>
                <TextBlock>Test</TextBlock>
            </ExperimentalAcrylicBorder>
        </TabItem>
        <TabItem Header="Color">
            <StackPanel>
                <Button x:Name="DarkColorBtn">Dark</Button>
                <Button x:Name="LightColorBtn">Light</Button>
            </StackPanel>
        </TabItem>
    </controls:NewTabControl>

</reactiveui:ReactiveWindow>
