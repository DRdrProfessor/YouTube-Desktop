<UserControl x:Class="YouTube_Desktop.Control.MenuControlButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YouTube_Desktop.Control"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="250">
    <UserControl.Template>
        <ControlTemplate>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"/>
                </Grid.RowDefinitions>
                <Border Background="Gray" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"/>
                <Image Grid.Column="0" Grid.Row="0" Width="40" MaxWidth="40" Source="{Binding Path=ImageSource, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MenuControlButton}}"/>
                <Button Grid.Column="1" Content="{Binding Path=Content, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MenuControlButton}}"/>
            </Grid>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
