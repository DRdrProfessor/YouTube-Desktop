<UserControl x:Class="YouTube_Desktop.Control.VideoListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Converters="clr-namespace:YouTube_Desktop.Converters"
             xmlns:local="clr-namespace:YouTube_Desktop.Control"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <ListBox x:Name="VidListBox" ItemsSource="{Binding Pli}" Background="{DynamicResource MainBackgroundBrush}" BorderThickness="0" Style="{DynamicResource lbSearchResultViewer}">
        <ListBox.ItemContainerStyleSelector>
            <Converters:StyleSelectorYTResult Style_Video="{StaticResource lbSearchResultViewer_Video}" Style_PlayList="{StaticResource lbSearchResultViewer_Playlist}" Style_Channel="{StaticResource lbSearchResultViewer_Channel}"/>
        </ListBox.ItemContainerStyleSelector>
    </ListBox>
</UserControl>