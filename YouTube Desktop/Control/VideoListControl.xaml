<UserControl x:Class="YouTube_Desktop.Control.VideoListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:YouTube_Desktop.Control"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <ListBox ItemsSource="{Binding pli}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Border Background="#303030" BorderThickness="0.5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Snippet.ChannelId}" Foreground="Red" FontSize="20"/>
                    </StackPanel>
                </Border>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>