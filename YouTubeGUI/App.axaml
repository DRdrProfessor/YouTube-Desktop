<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:bootstrapper="clr-namespace:YouTubeGUI"
             x:Class="YouTubeGUI.App">
    <Application.Styles>
        <!-- AvaloniaEdit TextEditor styles -->
        <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>
        <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/>
        <StyleInclude Source="avares://AvaloniaEdit/AvaloniaEdit.xaml" />

        <FluentTheme Mode="Dark"/> <!--Theme color scheme Dark | Light-->
    </Application.Styles>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/GUI/Styles/Default/DefaultStyle.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
