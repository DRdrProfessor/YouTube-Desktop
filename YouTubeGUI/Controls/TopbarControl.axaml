<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="50"
             x:Class="YouTubeGUI.Controls.TopbarControl" Name="_topbar">
    
    <Grid ColumnDefinitions="Auto, Auto, *, Auto, Auto, 20" RowDefinitions="30" VerticalAlignment="Center" Background="{Binding #_topbar.Background}">
        <Button Grid.Column="0" Grid.Row="0" Content="Menu"/>
        <Button Grid.Column="1" Grid.Row="0" Classes="YtLogo" Height="20" Command="{Binding YtLogoBtnCommand}" IsEnabled="True"/>
        <TextBox Grid.Column="2" Grid.Row="0" Classes="TopbarSearch"/>
        <Button Grid.Column="3" Grid.Row="0" Content="Search"/>
    </Grid>
</UserControl>
