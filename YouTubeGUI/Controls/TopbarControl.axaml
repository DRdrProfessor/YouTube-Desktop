<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:topbarcontrols="clr-namespace:YouTubeGUI.Controls.Topbar"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="50"
             x:Class="YouTubeGUI.Controls.TopbarControl">
    <Grid ColumnDefinitions="Auto, Auto, *, 20" RowDefinitions="30, Auto" VerticalAlignment="Center">
        <Button Grid.Column="0" Grid.Row="0">TEST</Button>
        <Button Grid.Column="1" Grid.Row="0" Classes="YtLogoStyle">
            <Button.Content>
                <Viewbox>
                    <topbarcontrols:TopbarLogo/>
                </Viewbox>
            </Button.Content>
        </Button>
        <TextBox Grid.Column="2" Grid.Row="0" Background="Gray"/>
    </Grid>
</UserControl>
