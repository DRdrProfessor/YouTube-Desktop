<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:YouTubeGUI.Controls"
        xmlns:vms="clr-namespace:YouTubeGUI.ViewModels"
        xmlns:views="clr-namespace:YouTubeGUI.Views"
        xmlns:xamlTools="clr-namespace:YouTubeGUI.Core.XamlTools"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" Width="1500" Height="500"
        x:Class="YouTubeGUI.Windows.MainWindow" WindowStartupLocation="CenterScreen"
        Title="YouTube">
        <Grid ColumnDefinitions="Auto, Auto, *, Auto" RowDefinitions="55, *">
                <controls:TopbarControl Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" x:Name="TopbarMain"/>
                <SplitView Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" IsPaneOpen="True" OpenPaneLength="250" CompactPaneLength="50" PanePlacement="Left" DisplayMode="Inline" PaneBackground="Transparent">
                        <SplitView.Pane>
                                <ContentControl Content="{Binding CurrentMainViewModel}">
                                        <ContentControl.DataTemplates>
                                                <DataTemplate DataType="{x:Type vms:HomeViewModel}">
                                                        <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                                                                <ItemsRepeater Items="{Binding GuideList}" ItemTemplate="{StaticResource GuideItemRef}"/>
                                                        </ScrollViewer>
                                                </DataTemplate>
                                        </ContentControl.DataTemplates>
                                </ContentControl>
                        </SplitView.Pane>
                        <ContentControl x:Name="ContentControlMain" Content="{Binding CurrentMainViewModel}">
                                <ContentControl.DataTemplates>
                                        <DataTemplate DataType="{x:Type vms:HomeViewModel}">
                                                <views:HomeView/>
                                        </DataTemplate>
                                </ContentControl.DataTemplates>
                        </ContentControl>
                </SplitView>
        </Grid>
</Window>