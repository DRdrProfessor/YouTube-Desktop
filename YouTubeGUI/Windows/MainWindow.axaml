<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:YouTubeGUI.Controls"
        xmlns:vms="clr-namespace:YouTubeGUI.ViewModels"
        xmlns:views="clr-namespace:YouTubeGUI.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="YouTubeGUI.Windows.MainWindow" WindowStartupLocation="CenterScreen" Width="1300" Height="600"
        Title="{Binding WindowTitle}">
        <Grid ColumnDefinitions="Auto, Auto, *, Auto" RowDefinitions="55, *">
                <controls:TopbarControl Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" x:Name="TopbarMain" DataContext="{Binding Topbar}"/>
                <SplitView Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" IsPaneOpen="{Binding IsGuidePaneOpen}" OpenPaneLength="250" CompactPaneLength="50"
                           PanePlacement="Left" DisplayMode="Inline" PaneBackground="Transparent">
                        <SplitView.Pane>
                                <ContentControl Content="{Binding CurrentContentViewModel}">
                                        <ContentControl.DataTemplates>
                                                <DataTemplate DataType="{x:Type vms:HomeViewModel}">
                                                        <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                                                                <ItemsRepeater Items="{Binding GuideList}" ItemTemplate="{StaticResource GuideItemRef}"/>
                                                        </ScrollViewer>
                                                </DataTemplate>
                                        </ContentControl.DataTemplates>
                                </ContentControl>
                        </SplitView.Pane>
                        <ContentControl x:Name="ContentControlMain" Content="{Binding CurrentContentViewModel}">
                                <ContentControl.DataTemplates>
                                        <DataTemplate DataType="{x:Type vms:HomeViewModel}">
                                                <views:HomeView/>
                                        </DataTemplate>
                                </ContentControl.DataTemplates>
                        </ContentControl>
                </SplitView>
                <!-- Media player control -->
        </Grid>
</Window>