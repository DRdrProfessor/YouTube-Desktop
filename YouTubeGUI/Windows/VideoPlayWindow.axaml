<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vlc="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="900"
        x:Class="YouTubeGUI.Windows.VideoPlayWindow" Foreground="{DynamicResource ForegroundBrush}" FontSize="{DynamicResource FontSizeNormal}"
        Title="VideoPlayWindow">
        <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                <Grid ColumnDefinitions="10, *, Auto, 10" RowDefinitions="*, Auto">
                        <vlc:VideoView Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" MinHeight="400" Margin="0 0 0 10" x:Name="VideoView"/>
                        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical" Spacing="10">
                                <Border BorderBrush="Gray" BorderThickness="0 0 0 1">
                                        <TextBlock Text="{Binding Microformat.Title.GetText}" FontSize="{DynamicResource FontSizeLarge}" TextTrimming="CharacterEllipsis"/>
                                </Border>
                                <TextBlock Text="{Binding Microformat.Description.GetText}" TextWrapping="Wrap"/>
                        </StackPanel>
                </Grid>
        </ScrollViewer>
</Window>